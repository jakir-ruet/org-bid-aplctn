                </div>
                <div class="col-lg-3 col-md-3 col-sm-6" style="text-align:center;">
                    <h6 style="margin:0px;">@(Model.CommBidMstrs.ActivatedBy ?? "") &nbsp;</h6>
                    <small>@(Model.CommBidMstrs.ActivationTm != null ? @Model.CommBidMstrs.ActivationTm.Value.ToString("dd-MMM-yy hh:mm tt") : "") &nbsp;</small>
                    <hr style="margin:5px !important;" />
                    <h6>Activated By</h6>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6" style="text-align:center;">
                    <h6 style="margin:0px;">@(Model.CommBidMstrs.ProcessBy ?? "") &nbsp;</h6>
                    <small>@(Model.CommBidMstrs.ProcessTm != null ? @Model.CommBidMstrs.ProcessTm.Value.ToString("dd-MMM-yy hh:mm tt") : "") &nbsp;</small>
                    <hr style="margin:5px !important;" />
                    <h6>Process By</h6>
                </div>
                <div class="col-lg-3 col-md-3 col-sm-6" style="text-align:center;">
                    <h6 style="margin:0px;">@(Model.CommBidMstrs.CloseBy ?? "") &nbsp;</h6>
                    <small>@(Model.CommBidMstrs.CloseTm != null ? @Model.CommBidMstrs.CloseTm.Value.ToString("dd-MMM-yy hh:mm tt") : "") &nbsp;</small>
                    <hr style="margin:5px !important;" />
                    <h6>Closed By</h6>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/bundles/libscripts.bundle.js"></script>
    <script src="~/lib/bundles/vendorscripts.bundle.js"></script>
