    <div class="row clearfix">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table id="bidTable" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th colspan="8" style="padding: 0 !important; border: 0 !important;">
                                <div class="block-header">
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12" style="text-align:center;">
                                            <h3>Nabil Group</h3>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12 col-sm-12" style="text-align:center;">
                                            <h2>Bid Details</h2>
                                        </div>
                                    </div>
                                </div>
                                <table class="table table-striped table-bordered" style="width:100%">
                                    <tr>
                                        <td>Bid Id:</td>
                                        <td style="text-align:center;">@Model.CommBidMstrs.BidId</td>
                                        <td>Bid Date:</td>
                                        <td style="text-align:center;">@Model.CommBidMstrs.BidDate.ToString(" dd-MMM-yyyy")</td>
                                        <td>Start Time:</td>
                                        <td style="text-align:center;">@Model.CommBidMstrs.BidStrtTm.ToString(" hh:mm tt")</td>
                                        <td>End Time:</td>
                                        <td style="text-align:center;">@Model.CommBidMstrs.BidEndTm.ToString(" hh:mm tt")</td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">Product Name:</td>
                                        <td colspan="2">@Model.CommBidMstrs.Prod.ProdName</td>
                                        <td>Warehouse Name:</td>
                                        <td>@Model.CommBidMstrs.Warehouse.WareName</td>
                                        <td>Status</td>
                                        <td style="text-align:center;">@(Model.CommBidMstrs.BidStat == 0 ? "Draft" : Model.CommBidMstrs.BidStat == 1 ? "Active" : Model.CommBidMstrs.BidStat == 2 ? "Closed" : "Canceled")</td>
                                    </tr>
                                    <tr>
                                        <td>Bid Qnty:</td>
                                        <td style="text-align:center;">@Model.CommBidMstrs.BidQnty.ToString("N0")</td>
                                        <td>Bid Rate:</td>
                                        <td style="text-align:center;">@Model.CommBidMstrs.BidRate.ToString("N2")</td>
                                        <td>Allocate Qnty:</td>
                                        <td style="text-align:center;">@(Model.CommBidMstrs.AllocQnty?.ToString("N2") ?? "0.00")</td>
                                        <td>Allocate Rate:</td>
                                        <td style="text-align:center;">@(Model.CommBidMstrs.AllocRate?.ToString("N2") ?? "0.00")</td>
                                    </tr>
                                    <tr>
                                        <td>Notes:</td>
                                        <td colspan="7">@(Model.CommBidMstrs.BidNote != null ? Model.CommBidMstrs.BidNote.Trim() : "")</td>
                                    </tr>
                                </table>


                            </th>
                        </tr>
                        <tr>
                            <th style="text-align: center;">Sys #</th>
                            <th style="text-align: center;">Party Name</th>
                            <th style="text-align: center;">Contact No</th>
                            <th style="text-align: center;">Bid Qnty</th>
                            <th style="text-align: center;">Bid Rate</th>
                            <th style="text-align: center;">Alloc Qnty</th>
                            <th style="text-align: center;">Status</th>
                            <th style="text-align: center;">Sms</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int serialNo = 1;
                        }
                        @foreach (var bidder in Model.CommBidClntBidders)
                        {
                            <tr data-status="@(bidder.BidAttnStat == 1 ? "active" : "inactive")">
                                <td data-editable="false" align="center">@serialNo</td>
                                <td data-editable="false">@bidder.Party.PartyName</td>
                                <td data-editable="false" align="center">@bidder.SmsContNo</td>
                                <td data-editable="false" align="right">@((bidder.BidQnty.HasValue) ? bidder.BidQnty.Value.ToString("N0") : "0")</td>
                                <td data-editable="false" align="right">@((bidder.BidRate.HasValue) ? bidder.BidRate.Value.ToString("N2") : "0")</td>
                                <td data-editable="@(bidder.BidAttnStat == 1 ? "true" : "false")" class="numeric-column" align="right">@((bidder.AllocQnty.HasValue) ? bidder.AllocQnty.Value.ToString("N0") : "0")</td>
                                <td data-editable="false" align="center">@Html.Raw(bidder.BidAttnStat == 1 ? "<span class='badge badge-warning'>Active</span>" : "<span class='badge badge-danger'>Inactive</span>")</td>
                                <td data-editable="false" align="center">@Html.Raw(bidder.SmsSendStat == 1 ? "<i class='fa fa-check'></i>" : "")</td>
                            </tr>

                            serialNo++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-lg-12">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-6" style="text-align:center;">
