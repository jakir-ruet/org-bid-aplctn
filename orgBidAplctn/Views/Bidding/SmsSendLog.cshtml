    <!-- OTHER CSS INCLUDED ON THIS PAGE - START -->
    <link rel="stylesheet" href="~/lib/daterangepicker/daterangepicker.min.css">
    <link rel="stylesheet" href="~/lib/jquery-datatable/responsive.dataTables.min.css">
